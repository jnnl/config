[user]
    email = juho@jnnl.net
    name = Juho Junnila
[github]
    user = jnnl
[core]
    editor = vim
[push]
    default = current
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[alias]
    a = add --all
    ac = "!git add --all && git commit"
    ap = add --patch
    b = branch
    c = commit
    ca = commit --amend
    co = checkout
    d = diff
    dc = diff --cached
    dt = difftool
    dr = diff @ @{u}
    l = log --oneline --decorate --graph
    lg = log --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(blue)%an%Creset' --abbrev-commit
    nuke = "!git stash && git stash drop; git clean -fdx"
    pr = pull --rebase
    rb = rebase
    rh = reset --hard
    rs = reset --soft
    rso = remote show origin
    s = status -bs
