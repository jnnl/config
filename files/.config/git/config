[user]
    name = Juho Junnila
    email = git@jnnl.eu
    useConfigOnly = true
[init]
    defaultBranch = master
[github]
    user = jnnl
[core]
    editor = nvim
[diff]
    algorithm = histogram
    colorMoved = default
[push]
    default = current
[merge]
    tool = diffconflicts
    conflictStyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "diffconflicts"]
    cmd = nvim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
    trustExitCode = true
[alias]
    ac = "!git add -A && git commit"
    ap = add --patch
    b = branch
    c = commit
    ca = commit --amend
    cb = "!bash -ic gcb"
    co = checkout
    d = diff
    dc = diff --cached
    dh = diff HEAD^ HEAD
    dr = "!git fetch && git diff FETCH_HEAD"
    du = diff --name-only --diff-filter=U
    l = log --oneline --decorate --graph
    lg = log --date=format:'%a %_d %b %H:%M %Y' --pretty=format:'%C(auto)%h  %C(green)%ad  %C(blue)%<(15,trunc)%an %C(auto)%s%d'
    mff = merge --ff-only
    pp = "!git pull && git push"
    pr = pull --rebase
    prp = "!git pull --rebase && git push"
    rh = reset --hard
    rso = remote show origin
    s = status -bsu
    spps = "!bash -c 'if [[ -n $(git status -s) ]]; then git stash -u && git pull && git push && git stash pop; else git pull && git push; fi'"
    sps = "!bash -c 'if [[ -n $(git status -s) ]]; then git stash -u && git pull && git stash pop; else git pull; fi'"
