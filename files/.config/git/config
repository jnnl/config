[user]
    name = Juho Junnila
    email = git@jnnl.eu
    useConfigOnly = true
[github]
    user = jnnl
[core]
    editor = nvim
[push]
    default = current
[merge]
    tool = diffconflicts
    conflictStyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "diffconflicts"]
    cmd = nvim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
    trustExitCode = true
[pull]
    rebase = true
[alias]
    ac = "!git add --all && git commit"
    ap = add --patch
    br = branch
    c = commit
    ca = commit --amend
    co = checkout
    d = diff
    dc = diff --cached
    dh = diff HEAD^ HEAD
    dr = "!git fetch && git diff FETCH_HEAD"
    l = log --oneline --decorate --graph
    lg = log --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(blue)%an%Creset' --abbrev-commit
    nuke = "!git stash && git stash drop; git clean -fdx"
    pp = "!git pull --rebase && git push"
    pr = pull --rebase
    rb = rebase
    rp = reset --patch
    rh = reset --hard
    rs = reset --soft
    rso = remote show origin
    s = status -bsu
    sps = "!git stash && git pull && git stash pop"
    spps = "!git stash && git pull && git push && git stash pop"
    s = status -bsu
