[user]
    name = Juho Junnila
    email = git@jnnl.eu
    useConfigOnly = true
[init]
    defaultBranch = master
[github]
    user = jnnl
[core]
    editor = nvim
[diff]
    algorithm = histogram
    colorMoved = default
[push]
    default = current
[merge]
    tool = diffconflicts
    conflictStyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "diffconflicts"]
    cmd = nvim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
    trustExitCode = true
[alias]
    ac = "!git add -A && git commit"
    ap = add --patch
    b = branch
    c = commit
    ca = commit --amend
    cb = "!bash -ic gcb"
    co = checkout
    d = diff
    dc = diff --cached
    dh = diff HEAD^ HEAD
    du = diff --name-only --diff-filter=U
    dr = "!git fetch && git diff FETCH_HEAD"
    l = log --oneline --decorate --graph
    lg = log --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cd) %C(blue)%an%Creset' --abbrev-commit --date=default
    mff = merge --ff-only
    pp = "!git pull && git push"
    pr = pull --rebase
    rh = reset --hard
    rso = remote show origin
    s = status -bsu
    spps = "!bash -c 'if [[ -n $(git status -s) ]]; then git stash -u && git pull && git push && git stash pop; else git pull && git push; fi'"
    sps = "!bash -c 'if [[ -n $(git status -s) ]]; then git stash -u && git pull && git stash pop; else git pull; fi'"
